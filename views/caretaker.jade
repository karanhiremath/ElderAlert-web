extends layout

block content
  h1= user.username
  h3= user.email
  h3= user.phone
  
  if(user.role=='caretaker')
    h2 Add Elder
    h3= error
    form(method="post")
        h3.label Elder Username*
        input(type="text", name="username").required
        h3.label Elder Phone Number*
        input(type="text", name="phone").required
        br
        br
        button(type="submit")#btn-login.btn.btn-primary.btn-large
            |Add Elder

